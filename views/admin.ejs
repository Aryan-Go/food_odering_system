<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheet/menu.css"
</head>
<body class="text-center">
    <nav class="navbar sticky-top bg-body-tertiary" style="background-color: #e3f2fd;" data-bs-theme="light">
        <div class="container-fluid">
          <a class="navbar-brand"><img class="w-[5rem]" src="/image/logo-removebg.png" alt="logo"></a>
          <div class="flex justify-around items-center w-max role="search">
            <a class="navbar-brand mb-0 h1 text-gray-600 no-underline" href="/admin">Home</a>
          </div>
        </div>
    </nav>
    <div class="h-[100vh]">
        <h1 class="py-[2rem]">Hello Admin</h1>
        <h2 class="py-[2rem]">Order and its Preperation</h2>
        <form action="/admin_working" method="post">
            <label for="quant" class="px-[4rem] font-bold">Order_id</label>
            <select name="order_id">
                <% data.forEach((data_row,index) => { %>
                    <option value="<%= data_row.order_id %>"><%= data_row.order_id %></option>
                <% }) %>
            </select><br><br>
            <button type="submit" class="text-center text-4xl font-bold w-[30%] bg-[#F4D871] px-[2rem] py-[0.5rem] mb-30">Submit Chef_id</button>
        </form>

        <h2 class="py-[2rem]">Payment_table</h2>
        <form action="/admin_working" method="post">
            <label for="quant" class="px-[4rem] font-bold">order_id</label>
            <select name="order_id_2">
                <% data_2.forEach((data_row,index) => { %>
                    <option value="<%= data_row.order_id %>"><%= data_row.order_id %></option>
                <% }) %>
            </select><br><br>
            <button type="submit" class="text-center text-4xl font-bold w-[30%] bg-[#F4D871] px-[2rem] py-[0.5rem] mb-30">Submit order_id</button>
        </form>
        <h2>Convert to chef</h2>
        <form action="/admin_working" method="post">
            <label for="quant" class="px-[4rem] font-bold">Customer id who want to be a chef</label>
            <select name="customer_id">
                <% customer_chef.forEach((data_row,index) => { %>
                    <option value="<%= data_row %>"><%= data_row %></option>
                <% }) %>
            </select><br><br>
            <button type="submit" class="text-center text-4xl font-bold w-[30%] bg-[#F4D871] px-[2rem] py-[0.5rem] mb-30">Submit customer_id</button>
        </form>
    </div>
</body>
</html>