<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheet/menu.css"
</head>
<body class="text-center">
    <nav class="navbar sticky-top bg-body-tertiary" style="background-color: #e3f2fd;" data-bs-theme="light">
        <div class="container-fluid">
          <a class="navbar-brand"><img class="w-[5rem]" src="/image/logo-removebg.png" alt="logo"></a>
          <div class="flex justify-around items-center w-[20%]" role="search">
            <a class="navbar-brand mb-0 h1 text-gray-600 no-underline" href="/menu">Menu</a>
            <a class="navbar-brand mb-0 h1 text-gray-600 no-underline" href="/customer">Home</a>
          </div>
        </div>
    </nav>
    <form action="/food_items_added" method="post" class="text-center">
        <div class="h-full w-[100vw] bg-[url(/image/menu_back.webp)] bg-no-repeat bg-size-[length:100%_100%] text-center flex flex-col justify-center items-center gap-2rem text-center"">
            <h1 class="py-[4rem]">Menu</h1>
            <h2 class=" m-[4rem] px-[10rem]">Starters</h2>
            <table class="text-center w-[60vw] m-[4rem] px-[10rem]">
                <thead>
                <tr>
                    <th scope="col" class="text-2xl mx-[2rem]">Food Items</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Description</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Price</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Quantity Added</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Special Instructions</th>
                </tr>
                </thead>
                <tbody>
                    <% starters.forEach(function(starter){ %>
                        <tr>
                            <td class="text-xl font-bold mx-[2rem]"><%= starter.food_name %></td>
                            <td class="text-xl font-semibold mx-[2rem]"><%= starter.description %></td>
                            <td class="text-xl font-bold mx-[2rem]">Rs<%= starter.price %></td>
                            <td class="text-xl font-bold mx-[2rem]">
                                <label for="quant">Quanity</label><br>
                                <input type="number" value=0 name="quant"  min="0" class="quant w-[5rem] text-center border-dashed border-black">
                                <input type="number" value="<%= starter.food_id %>" name="food_id" class="food_id" hidden>
                            </td>
                            <td class="text-xl font-bold mx-[2rem]">
                                <label for="quant">Special Instructions here</label><br>
                                <input type="text" name="special_instructions" class="food_id">
                            </td>
                        </tr>
                    <% }); %>
                
                </tbody>
            </table>

            <h2 class=" m-[4rem] px-[10rem]">Main Course</h2>
            <table class="text-center w-[60vw] m-[4rem] px-[10rem]">
                <thead>
                <tr>
                    <th scope="col" class="text-2xl mx-[2rem]">Item</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Description</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Price</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Quantity Added</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Special Instructions</th>
                </tr>
                </thead>
                <tbody>
                    <% main_course.forEach(function(main){ %>
                        <tr>
                            <td class="text-xl font-bold mx-[2rem]"><%= main.food_name %></td>
                            <td class="text-xl font-semibold mx-[2rem] "><%= main.description %></td>
                            <td class="text-xl font-bold mx-[2rem]">Rs<%= main.price %></td>
                            <td class="text-xl font-bold mx-[2rem]">
                                <label for="quant">Quanity</label>
                                <input type="number" value=0 name="quant" min="0" class="quant w-[5rem] text-center border-dashed border-black">
                                <input type="number" value="<%= main.food_id %>" name="food_id" class="food_id" hidden>
                            </td>
                            <td class="text-xl font-bold mx-[2rem]">
                                <label for="quant">Special Instructions here</label><br>
                                <input type="text" name="special_instructions" class="food_id">
                            </td>
                        </tr>
                    <% }); %>
                
                </tbody>
            </table>

            <h2 class=" m-[4rem] px-[10rem]">Deserts</h2>
            <table class="text-center w-[60vw] mb-20  px-[10rem]">
                <thead>
                <tr>
                    <th scope="col" class="text-2xl mx-[2rem]">Item</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Description</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Price</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Quantity Added</th>
                    <th scope="col" class="text-2xl mx-[2rem]">Special Instructions</th>
                </tr>
                </thead>
                <tbody>
                    <% dessert.forEach(function(dess){ %>
                        <tr>
                            <td class="text-xl font-bold mx-[2rem]"><%= dess.food_name %></td>
                            <td class="text-xl font-semibold mx-[2rem]"><%= dess.description %></td>
                            <td class="text-xl font-bold mx-[2rem]">Rs<%= dess.price %></td>
                            <td class="text-xl font-bold mx-[2rem]">
                                <label for="quant">Quanity</label>
                                <input type="number" value=0 name="quant" min="0" class="quant w-[5rem] text-center border-dashed border-black">
                                <input type="number" value= "<%= dess.food_id %>"name="food_id" class="food_id" hidden>
                            </td>
                            <td class="text-xl font-bold mx-[2rem]">
                                <label for="quant">Special Instructions here</label><br>
                                <input type="text" name="special_instructions" class="food_id">
                            </td>
                        </tr>
                    <% }); %>
                
                </tbody>
            </table>
            <button type="submit" class="text-center text-4xl font-bold w-[30%] bg-[#F4D871] px-[2rem] py-[0.5rem] mb-30">Submit your order</button>
        </div>
    </form>
</body>
</html>l